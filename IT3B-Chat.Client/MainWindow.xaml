<Window x:Class="IT3B_Chat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="ServerAddress" Width="300" Margin="10" />
            <Button Name="ConnectButton" Content="Connect" Width="100" Margin="10"/>
            <Button Name="DisconnectButton" Content="Disconnect" Width="100" Margin="10"/>
            <ListBox Name="ServerMessages" Width="760" Height="200" Margin="10"/>
            <TextBox Name="MessageTextBox" Width="760" Height="100" Margin="10"/>
            <Button Name="SendButton" Content="Send" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
