<Window x:Class="IT3B_Chat.Server.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="ServerAddress" Width="300" Margin="10" />
            <Button Name="ConnectButton" Content="Connect" Width="100" Margin="10"/>
            <Button Name="DisconnectButton" Content="Disconnect" Width="100" Margin="10"/>
            <ListBox Name="ClientActions" Width="760" Height="200" Margin="10"/>
            <ListBox Name="ClientMessages" Width="760" Height="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
